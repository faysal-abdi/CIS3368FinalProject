<!DOCTYPE html>
<html>
<head>
    <title>Facilities</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1>Facilities</h1>
        <form method="POST" action="/facilities">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Facility</button>
        </form>

        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% facilities.forEach(function(facility) { %>
                <tr>
                    <td><%= facility.id %></td>
                    <td><%= facility.name %></td>
                    <td>
                        <form method="POST" action="/facilities/<%= facility.id %>?_method=PUT">
                            <div class="form-group">
                                <input type="text" class="form-control" name="name" value="<%= facility.name %>" required>
                            </div>
                            <button type="submit" class="btn btn-sm btn-primary">Update</button>
                        </form>
                        <form method="POST" action="/facilities/<%= facility.id %>?_method=DELETE">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>